<h1>Discover Movies</h1>

<%= link_to 'Find Top Rated Movies', user_movies_path(q:"top_rated"), class: "btn btn-primary" %>

<%= form_with url: user_movies_path, method: :get, data: {turbo: false}, local: true do |f| %>
    <%= f.text_field :q, class: "form-control" %>
    <%= f.submit 'Find Movies', class: "btn btn-primary" %>
<% end %>
